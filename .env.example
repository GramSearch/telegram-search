# Telegram API Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_here

# Database Configuration
# You can use DATABASE_URL or separate fields
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tg_search
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=tg_search

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1  # Optional, for custom API providers

# File Storage Configuration
SESSION_PATH=~/.telegram-search/session  # Optional, default: ~/.telegram-search/session
MEDIA_PATH=~/.telegram-search/media      # Optional, default: ~/.telegram-search/media

# Performance Configuration
MESSAGE_BATCH_SIZE=100  # Optional, default: 100
