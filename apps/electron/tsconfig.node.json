    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["electron-vite/node"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*"]
}
